<% content_for :breadcrumb do %>
  <ul id="breadcrumb">
    <li><%= link_to 'Dashboard', private_home_path %></li>
    <li>»</li>
    <li><%= link_to 'Gun Sheets', private_gun_sheets_path %></li>
    <li>»</li>
    <li><%= @page_title %></li>
  </ul>
<% end %>

<% form_for [:private, @job, @gun_sheet] do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <br class="clear">
  <hr>
  <%= f.submit "Create Gun Sheet" %> or <%= link_to 'Cancel', private_home_path %>
<% end %>