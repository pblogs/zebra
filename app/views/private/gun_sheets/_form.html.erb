    <td><%= form.text_field "solid_y1", :class => "span-3" %></td>
    <td><%= form.text_field "skip_y1", :class => "span-3" %></td>
  </tr>
  <tr>
    <th>Y-2</th>
    <td><%= form.text_field "solid_y2", :class => "span-3"  %></td>
    <td><%= form.text_field "skip_y2", :class => "span-3"  %></td>
  </tr>
  <tr>
    <th>Y-3</th>
    <td><%= form.text_field "solid_y3", :class => "span-3"  %></td>
    <td><%= form.text_field "skip_y3", :class => "span-3"  %></td>
  </tr>
  <tr>
    <th>W-4</th>
    <td><%= form.text_field "solid_w4", :class => "span-3"  %></td>
    <td><%= form.text_field "skip_w4", :class => "span-3"  %></td>
  </tr>
  <tr>
    <th>W-5</th>
    <td><%= form.text_field "solid_w5", :class => "span-3"  %></td>
    <td><%= form.text_field "skip_w5", :class => "span-3"  %></td>
  </tr>
  <tr>
    <th>W-6</th>
    <td><%= form.text_field "solid_w6", :class => "span-3"  %></td>
    <td><%= form.text_field "skip_w6", :class => "span-3"  %></td>
  </tr>
  <tr>
    <th>W-7</th>
    <td><%= form.text_field "solid_w7", :class => "span-3"  %></td>
    <td><%= form.text_field "skip_w7", :class => "span-3"  %></td>
  </tr>
