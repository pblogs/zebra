  </tr>
  <tr>
  <td><%= form.label :started_at, "Started at:" %></td>
  <td><%= form.time_select :started_at, :twelve_hour => true %></td>
  </tr>
  <tr>
  <td><%= form.label :completed_at, "Completed at:" %></td>
  <td><%= form.time_select :completed_at, :twelve_hour => true %></td>
