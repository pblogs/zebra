<table>
  <tr>
  <td><%= form.label :client_id, "Client:" %></td>
  <td><%= form.select (:client_id, @clients.map {|u| [u.name,u.id]}, :include_blank => true) %></td>
  </tr>
  <tr>
  <td><%= form.label :note, "Note:" %></td>
  <td><%= form.text_field "note", :size => "20" %></td>
  </tr>
  <tr>
    <td><%= form.label :job_location_id, "Location" %></td>
