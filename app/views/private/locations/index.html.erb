<% content_for :breadcrumb do %>
  <ul id="breadcrumb">
    <li><%= link_to 'Dashboard', private_home_path %></li>
    <li>»</li>
    <li><%= link_to 'Settings', private_settings_path %></li>
    <li>»</li>
    <li><%= @page_title %></li>
  </ul>
<% end %>

<p id="new"><%= link_to 'New location', new_private_location_path %></p>

<table class="sortable">
  <tr>
    <th>Name</th>
    <th class="actions nosort"></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= link_to location.name, edit_private_location_path(location), :class => "show" %></td>
    <td class="actions"><%= link_to 'Delete', private_location_path(location), :confirm => 'Are you sure? This cannot be undone!', :method => :delete, :class => "delete" %></td>
  </tr>
<% end %>
</table>