<% content_for :breadcrumb do %>
  <ul id="breadcrumb">
    <li><%= link_to 'Dashboard', private_home_path %></li>
    <li>»</li>
    <li><%= link_to 'Time Sheets', private_time_sheets_path %></li>
    <li>»</li>
    <li><%= link_to @time_sheet.label, private_time_sheet_path(@time_sheet) %></li>
    <li>»</li>
    <li><%= @page_title %></li>
  </ul>
<% end %>

<% content_for :submenu do %>
  <%= render :partial => 'menus/estimates_menu', :layout => false %>
<% end %>

<% form_for [:private, @estimate] do |f| %>
  <%= f.error_messages %>

  <p>
    <label>Hours</label>
    <br>
    <%= f.text_field :hours, :class => "span-7" %>
  </p>

  <hr>
  <%= f.submit "Save and Return to Time Sheet" %> or <%= link_to 'Cancel', edit_private_time_sheet_path(@time_sheet.id) %>
<% end %>