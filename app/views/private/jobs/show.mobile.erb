<h3>General</h3>
<p>
  Name: <%= @job.name %>
  <%= if @job.notes : "<br>Notes: #{@job.notes}" end %>
</p>

<h3>Schedule</h3>
<p>
Start: <%= @job.started_on %><br />
Status: <%= @job.completion.name %><br />
Complete: <%= @job.completed_on %>
</p>

<hr />

<h3>Client</h3>
<p>
  <% if @job.client %>
    <%= if @job.client.contact    : "#{@job.client.contact}<br>" end %>
    <%= if @job.client.name       : "#{@job.client.name}<br>" end %>
    <%= if @job.client.address    : "#{@job.client.address}<br>" end %>
    <%= if @job.client.city       : "#{@job.client.city}" end %> <%= if @job.client.province : ", #{@job.client.province}" end %>
    <br>
    <%= if @job.client.work_phone : "Work: #{@job.client.work_phone}<br>" end %>
    <%= if @job.client.cell_phone : "Cell: #{@job.client.cell_phone}<br>" end %>
    <%= if @job.client.fax        : "Fax: #{@job.client.fax}<br>" end %>
    <%= if @job.client.email      : "Email: #{@job.client.work_phone}<br>" end %>
    <% if @job.client.notes : "<br>#{@job.client.notes}" end %>
  <% end %>
</p>

<hr />

<h3>Users</h3>
<ol>
  <% @job.users.each do |user| %>
    <li><%= user.name %></li>
  <% end %>
</ol>

<hr />

<h3>Equipment</h3>
<ol>
<% @job.equipments.each do |equipment| %>
  <li><%= equipment.unit %> - <%= equipment.name %></li>
<% end %>
</ol>

<hr />

<h3>Locations</h3>
<p><%= @job.location_name %></p>
<ol>
<% @job.job_locations.each do |location| %>
  <li><%= location.name %></li>
<% end %>
</ol>

<hr />

<h3>Marking Quantities</h3>
<ol>
<% @job.job_markings.each do |m| %>
  <li><%= m.amount %> <%= m.gun_marking_category.name %> @ $<%= m.rate %></li>
<% end %>
</ol>

<hr>

<h3>Time Sheets</h3>
<ol>
  <li><%= link_to "Add a Time Sheet", new_private_job_time_sheet_path(:job_id => @job.id) %></li>
<% @job.time_sheets.each do |time_sheet| %>
  <li><%= link_to "Time Sheet ##{time_sheet.id}", private_time_sheet_path(time_sheet) %></li>
<% end %>
</ol>

<hr />

<h3>Load Sheets</h3>
<ol>
  <li><%= link_to "Add a Load Sheet", new_private_load_sheet_path %></li>
<% @job.load_sheets.each do |load_sheet| %>
  <li><%= link_to "Load Sheet ##{load_sheet.id}", private_load_sheet_path(load_sheet) %></li>
<% end %>
</ol>

<hr />

<h3>Gun Sheets</h3>
<ol>
  <li><%= link_to "Add a Gun Sheet", new_private_load_sheet_path %></li>
<% @job.gun_sheets.each do |gun_sheet| %>
  <li><%= link_to "Gun Sheet ##{gun_sheet.id}", private_gun_sheet_path(gun_sheet) %></li>
<% end %>
</ol>