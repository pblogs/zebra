<div class="container">
<%= content_for :breadcrumb do %>
  <ul id="breadcrumb">
    <li><%= link_to 'Dashboard', private_home_path %></li>
    <li>»</li>
    <li><%= link_to 'Jobs', private_jobs_path %></li>
    <li>»</li>
    <li><%= @page_title %></li>
  </ul>
<% end %>

<%= content_for :submenu do %>
  <%= render :partial => 'menus/jobs_menu', :layout => false %>
<% end %>

<%= form_for @job, url: private_job_path(@job.id), html: {multipart: true, method: :put} do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Save Job" %> or <%= link_to 'Cancel', private_jobs_path %>
<% end %>
    </div>
