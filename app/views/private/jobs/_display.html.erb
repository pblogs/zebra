<% content_for :breadcrumb do %>
  <ul id="breadcrumb">
    <li><%= link_to 'Dashboard', private_home_path %></li>
    <li>Â»</li>
    <li><%= @page_title %></li>
  </ul>
<% end %>

<% content_for :submenu do %>
  <% if permitted_to? :create, :private_jobs -%>
    <li><%= active_link_to 'New Job on Hand', new_private_job_path %></li>
  <% end %>
  <% if permitted_to? :create, :private_load_sheets -%>
    <%= link_to "New Load Sheet", new_private_load_sheet_path %>
  <% end %>
  <% if permitted_to? :create, :private_jobs -%>
    <%= link_to "Archived Jobs", '/admin/archived_jobs' %>
  <% end %>
<% end %>

<table class="sortable">
  <tr>
    <th class="span-2 center number">#</th>
    <th>Name</th>
    <th class="center">%</th>
    <th class="span-2 center">Start</th>
    <th class="span-2 center">End</th>
    <th>Client</th>
	<th>Location</th>
    <th class="actions nosort"></th>
  </tr>
<% i = 0 %>
<% @jobs.each do |job| %>

  <% if i == 18 %>
    <tr class="hidden print-break">
      <th class="center">#</th>
      <th>Name</th>
      <th class="center">%</th>
      <th class="center">Start</th>
      <th class="center">End</th>
      <th>Client</th>

      <th class="actions"></th>
    </tr>
    <% i = 0 %>
  <% else %>
    <% i += 1 %>
  <% end %>

  <tr>
    <td><%= link_to job.id, private_job_path(job), :class => "show" %></td>
    <td><%= link_to job.name, private_job_path(job) %></td>
    <td class="right"><%= if job.completion : job.completion.name else "-" end %></td>
    <td class="right"><%= if job.started_on : job.started_on.strftime('%b-%d-%y') else "-" end %></td>
    <td class="right"><%= if job.completed_on : job.completed_on.strftime('%b-%d-%y') else '' end %></td>
    <td><%= job.client.name %>
    <%= "<br />#{job.client.contact}" if job.client.contact != "" %>
    <%= "<br />W: #{job.client.work_phone}" if job.client.work_phone != "" %>
    <%= "<br />C: #{job.client.cell_phone}" if job.client.cell_phone != "" %>
    </td>
	<td><%= if job.location_name : job.location_name else '' end %></td>
    <td class="actions">
    <%= link_to 'Delete', private_job_path(job), :confirm => 'Are you sure? This cannot be undone!', :method => :delete, :class => "delete" %>
    <%= link_to "Edit", edit_private_job_path(job), :class => "edit" %>
    </td>
  </tr>
<% end %>
</table>