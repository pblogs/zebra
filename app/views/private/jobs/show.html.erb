<% content_for :breadcrumb do %>
  <ul id="breadcrumb">
    <li><%= link_to 'Dashboard', private_home_path %></li>
    <li>»</li>
    <li><%= link_to 'Jobs', private_jobs_path %></li>
    <li>»</li>
    <li><%= @page_title %></li>
  </ul>
<% end %>

<div class="span-6 append-1">
  <div id="sidebar" class="clearfix">
    <%= render :partial => 'menus/jobs_menu', :layout => false %>
  </div><!-- sidebar -->

  <br class="clear">

  <hr>

  <h3>General Information</h3>
  <p>
    <%= job_label(@job) %>
    <%= if @job.notes : "<br>Notes: #{@job.notes}" end %>
  </p>

  <hr>

  <h3>Schedule</h3>
  <p>
    Start: <%= @job.started_on %><br>
    Status: <%= @job.completion.name %><br>
    Complete: <%= @job.completed_on %>
  </p>

  <hr>

  <h3>Client</h3>
  <p>
    <% if @job.client %>
      <%= if @job.client.contact    : "#{@job.client.contact}<br>" end %>
      <%= if @job.client.name       : "#{@job.client.name}<br>" end %>
      <%= if @job.client.address    : "#{@job.client.address}<br>" end %>
      <%= if @job.client.city       : "#{@job.client.city}" end %> <%= if @job.client.province : ", #{@job.client.province}" end %>
      <br>
      <%= if @job.client.work_phone : "Work: #{@job.client.work_phone}<br>" end %>
      <%= if @job.client.cell_phone : "Cell: #{@job.client.cell_phone}<br>" end %>
      <%= if @job.client.fax        : "Fax: #{@job.client.fax}<br>" end %>
      <%= if @job.client.email      : "Email: #{@job.client.work_phone}<br>" end %>
      <% if @job.client.notes : "<br>#{@job.client.notes}" end %>
    <% end %>
  </p>

</div><!-- span-6 append-1 -->

<div class="span-10 append-1">
  <h3>Users</h3>
  <ol>
    <% @job.users.each do |user| %>
      <li><%= user.name %></li>
    <% end %>
  </ol>

  <hr>

  <h3>Equipment</h3>
  <ol>
  <% @job.equipments.each do |equipment| %>
    <li><%= equipment.unit %> - <%= equipment.name %></li>
  <% end %>
  </ol>

  <hr>

  <h3>Location</h3>
  <p><%= @job.location_name %></p>
  <ol>
  <% @job.job_locations.each do |location| %>
    <li><%= location.name %></li>
  <% end %>
  </ol>

  <hr>

  <h3>Marking Quantities</h3>
  <ol>
  <% @job.job_markings.each do |m| %>
    <li><%= m.amount %> <%= m.gun_marking_category.name %></li>
  <% end %>
  </ol>

</div><!-- span-10 append-1 -->

<div class="span-6 last">
  <h3>Time Sheets</h3>
  <ol>
  <% @job.time_sheets.each do |time_sheet| %>
    <li><%= link_to "Time Sheet ##{time_sheet.id}", private_time_sheet_path(time_sheet), :class => "show" %></li>
  <% end %>
  </ol>

  <hr>

  <h3>Load Sheets</h3>
  <ol>
  <% @job.load_sheets.each do |load_sheet| %>
    <li><%= link_to "Load Sheet ##{load_sheet.id}", private_load_sheet_path(load_sheet), :class => "show" %></li>
  <% end %>
  </ol>

  <hr>

  <h3>Gun Sheets</h3>
  <ol>
  <% @job.gun_sheets.each do |gun_sheet| %>
    <li><%= link_to "Gun Sheet ##{gun_sheet.id}", private_gun_sheet_path(gun_sheet), :class => "show" %></li>
  <% end %>
  </ol>

  <hr>

  <h3>Job Sheets</h3>
  <ol>
  <% @job.job_sheets.each do |job_sheet| %>
    <li><%= link_to "Job Sheet ##{job_sheet.id}", private_job_sheet_path(job_sheet), :class => "show" %></li>
  <% end %>
  </ol>
</div><!-- span-6 last -->