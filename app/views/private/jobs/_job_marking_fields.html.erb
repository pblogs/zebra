<div class="fields">

  <div class="span-14">
    <%= form.label :gun_marking_category_id, "Category" %>
    <br>
    <%= form.select :gun_marking_category_id, @gun_marking_categories.map {|u| [u.name,u.id]}, :class => "span-4", :include_blank => true %>
  </div>
  <div class="span-2">
    <%= form.label :amount, "Quantity" %>
    <%= form.text_field "amount", :class => "span-2" %>
  </div>
  <div class="span-2">
    <%= form.label :rate, "Rate" %>
    <%= form.text_field "rate", :class => "span-2" %>
  </div>
  <div class="span-3 append-3 last">
    <br>
    <p><%= link_to_remove_fields "Remove", form %></p>
  </div>

</div>
