<div class="span-12">
  <h3>Load Sheets</h3>
  <% if @load_sheets.empty? %>
    <p>There are no load sheets available!</p>
  <% else %>
    <ul class="habtm">
    <% for load_sheet in @load_sheets %>
      <li>
        <label>
        <%= check_box_tag "material_report[load_sheet_ids][]", load_sheet.id, @material_report.load_sheets.include?(load_sheet) %>
        <%= load_sheet.label %>
        </label>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>

<div class="span-12 last">
  <h3>Gun Sheets</h3>
  <% if @job.gun_sheets.empty? %>
  <p>There are no gun sheets assigned to this job.</p>
  <% else %>
    <ul class="habtm">
    <% for gun_sheet in @job.gun_sheets %>
      <li>
        <label>
        <%= check_box_tag "material_report[gun_sheet_ids][]", gun_sheet.id, @material_report.gun_sheets.include?(gun_sheet) %>
        <%= gun_sheet.label %>
        </label>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>

<br class="clear">

<div class="append-bottom">
  <h3>Calculation Rate for Yellow Paint</h3>
  <%= form.text_field "yellow_rate", :class => "span-6" %>
</div>

<div class="append-bottom">
  <h3>Calculation Rate for White Paint</h3>
  <%= form.text_field "white_rate", :class => "span-6" %>
</div>