<div class="container">
<div class="span-12">
  <h3>Time Sheets</h3>
  <% if @job.time_sheets.empty? %>
    <p>There are no time sheets assigned to this job.</p>
  <% else %>
    <ul class="habtm">
    <% for time_sheet in @job.time_sheets %>
      <li>
        <label>
        <%= check_box_tag "job_sheet[time_sheet_ids][]", time_sheet.id, @job_sheet.time_sheets.include?(time_sheet) %>
        <%= time_sheet.label %>
        <div id="location_label" style="margin-left: 20px">
          <%= "(" + @job.location_label + ")" %>
        </div>
        </label>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>

<div class="span-12 last">
  <h3>Gun Sheets</h3>
  <% if @job.gun_sheets.empty? %>
  <p>There are no gun sheets assigned to this job.</p>
  <% else %>
    <ul class="habtm">
    <% for gun_sheet in @job.gun_sheets %>
      <li>
        <label>
        <%= check_box_tag "job_sheet[gun_sheet_ids][]", gun_sheet.id, @job_sheet.gun_sheets.include?(gun_sheet) %>
        <%= gun_sheet.label %>
        <div id="location_label" style="margin-left: 20px">
          <% if gun_sheet.location_name.present? %>
            <%= "(" + gun_sheet.location_name + ")" %>
          <% else %>
            <%= "(" + @job.location_label + ")" %>
          <% end %>
        </div>
        </label>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>

<br class="clear">

<div class="append-bottom">
  <h3>Cost of Paint per Litre</h3>
  <%= form.text_field "material_rate", :class => "span-6", :type => 'number', :step => 'any', :required => true %> ex. "0.35"
</div>
    </div>
