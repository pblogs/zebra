<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= content_for :breadcrumb do %>
      <ul id="breadcrumb">
        <li><%= link_to 'Dashboard', private_home_path %></li>
        <li>»</li>
        <li><%= link_to 'Jobs', private_job_estimates_path %></li>
        <li>»</li>
        <li><%= @page_title %></li>
      </ul>
    <% end %>

    <%= content_for :submenu do %>
      <% if permitted_to? :update, :private_job_estimates -%>
        <li><%= active_link_to 'Edit Job Estimate', edit_private_job_estimate_path(@job_estimate) %></li>
      <% end %>
    <% end %>

    <%= form_for @job_estimate, url: private_job_estimate_path(@job_estimate), html: {multipart: true, method: :put, class: 'job_estimate'} do |f| %>
      <%= f.error_messages %>
      <%= render partial: "form", object: f %>
      <%= f.submit "Update Job Estimate", class: 'btn btn-primary' %> or
      <%= link_to 'Cancel', private_job_estimate_path(@job_estimate), class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
