<tr class="item">
  <td class="title">
    <p><%= f.text_field :title, class: "span-7" %></p>
    <%= f.text_area :description, class: "span-7", rows: 4 %>
  </td>
  <td class="quantity"><%= f.text_field :quantity, class: "span-2" %></td>
  <td class="rate"><%= f.text_field :rate, class: "span-2" %></td>
  <td class="amount"><%= f.text_field :amount, class: "span-2" %></td>
  <td>
    <a href="#" class="remove" data-confirm="Are you sure?">remove</a>
    <%= f.hidden_field :id %>
    <%= f.hidden_field :_destroy %>
  </td>
</tr>
