<tr class="item">
  <td class="title">

      <%= f.select :title,
                   @materials.map { |m| m.manufacturer.try(:name) },
                   { include_blank: true },
                   { class: 'chosen-select span-7' } %>
  </td>
  <td class="quantity"><%= f.number_field :quantity, class: "span-2", min: 0 %></td>
  <td class="price"><%= f.number_field :price, class: "span-2 estimate_unit_price", min: 0 %></td>
  <td class="amount">
    <div class='total-price'></div>
    <%= f.hidden_field :total_price, min: 0 %>
  </td>
  <td>
    <a href="#" class="remove" data-confirm="Are you sure?">remove</a>
    <%= f.hidden_field :id %>
    <%= f.hidden_field :_destroy %>
  </td>
</tr>
<script type="text/javascript" language="javascript">
  jQuery('.chosen-select').chosen({
    allow_single_deselect: true,
    no_results_text: 'No results matched'
  });
</script>
