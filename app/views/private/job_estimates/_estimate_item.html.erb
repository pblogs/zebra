<tr class="item">
  <td class="title">

      <%= f.select :title,
                   @materials.map { |m| m.manufacturer.try(:name) },
                   { include_blank: true },
                   { class: 'chosen-select span-7' } %>

    <%#= f.text_area :description, class: "span-7", rows: 4 %>
  </td>
  <td class="quantity"><%= f.text_field :quantity, class: "span-2" %></td>
  <td class="rate"><%= f.text_field :price, class: "span-2" %></td>
  <td class="amount"><%= f.text_field :total_price, class: "span-2" %></td>
  <td>
    <a href="#" class="remove" data-confirm="Are you sure?">remove</a>
    <%= f.hidden_field :id %>
    <%= f.hidden_field :_destroy %>
  </td>
</tr>
<script type="text/javascript">
  jQuery('.chosen-select').chosen({
    allow_single_deselect: true,
    no_results_text: 'No results matched'
  });
</script>
