<div class="container">
<% content_for :submenu do %>
  <%= render :partial => 'menus/dashboard_menu', :layout => false %>
<% end %>

<p>Current time zone: <%= Time.zone.name %><br>
Current time: <%= Time.zone.now.inspect %></p>

<% if @crew %>
<p>You are part of <%= @crew.label %>: <%= @crew.user_list %></p>
<% else %>
<p>You are not assigned to a crew.</p>
<% end %>

<% if @jobs || current_user.role_symbols.include?(:admin) || current_user.role_symbols.include?(:office) %>
<div class="span-10">
<% form_tag :controller => 'private', :action => "navigate" do -%>

  <p><%= select_tag 'job[id]', options_from_collection_for_select(@jobs, 'id', 'label', session[:navigate]) %></p>

  <ul class="jobs">
    <% if permitted_to? :create, :private_clock_in -%>
      <li><label class="normal"><%= radio_button_tag "navigate", "clock_in" %> Clock In</label></li>
    <% end %>
    <% if permitted_to? :create, :private_clock_out -%>
      <li><label class="normal"><%= radio_button_tag "navigate", "clock_out" %> Clock Out</label></li>
    <% end %>
    <% if permitted_to? :show, :private_jobs -%>
      <li><label class="normal"><%= radio_button_tag "navigate", "show_job", :selected => true %> Show Job</label></li>
    <% end %>
    <% if permitted_to? :time_entries, :private_reports -%>
      <li><label class="normal"><%= radio_button_tag "navigate", "new_time_sheet" %> Submit Time Sheet</label></li>
    <% end %>
  </ul>

  <p><%= submit_tag "Go to Page" %></p>

<% end %>

</div>
<% end %>
<hr>
 <table class="no-border"> 
<% form_for @search do |f| %>

   <tr class="no-border"><td class="no-border">
  <p>
    <%= f.label :name_like, "Name" %><br />
    <%= f.text_field :name_like %>
  </p>
     </td>
        <td class="no-border">
  <p>
    <%= f.label :location_name_like, "Location" %><br />
    <%= f.text_field :location_name_like %>
  </p>
        </td>
        <td class="no-border">
  <p>
  <%= f.label :client_name_like , "Client" %><br />
  <%= f.text_field :client_name_like %>
  </p>
         </td>
        <td class="no-border">
  <p>
    <%= f.submit "Submit" %>
  </p>
        </td></tr>
<% end %>

</table>
 </div>
<% if @jobs != @search.all %>
<%= render :partial => "private/jobs/display", :locals => {:jobs => @searched_jobs} %>
<% end %>