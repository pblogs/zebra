<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= content_for :breadcrumb do %>
      <ul id="breadcrumb">
        <li><%= link_to 'Dashboard', private_home_path %></li>
        <li>»</li>
        <li><%= link_to 'Invoices', private_invoices_path %></li>
        <li>»</li>
        <li><%= @page_title %></li>
      </ul>
    <% end %>

    <%= content_for :submenu do %>
      <% if permitted_to? :update, :private_invoices -%>
        <li><%= active_link_to 'Edit Invoice', edit_private_invoice_path(@invoice) %></li>
      <% end %>
    <% end %>

    <%= form_for @invoice, url: private_invoice_path(@invoice), html: {multipart: true, method: :put, class: 'job_estimate'} do |f| %>
      <%= f.error_messages %>
      <%= render partial: "form", object: f %>
      <%= f.submit "Save", class: 'btn btn-success' %>
      <%= f.submit "Save & Send", name: 'save_and_send', class: 'btn btn-primary' %>
      or <%= link_to 'Cancel', private_invoice_path(@invoice), class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
