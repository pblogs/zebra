<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= content_for :breadcrumb do %>
      <ul id="breadcrumb">
        <li><%= link_to 'Dashboard', private_home_path %></li>
        <li>Â»</li>
        <li><%= @page_title %></li>
      </ul>
    <% end %>

    <%= form_for @setting, url: private_setting_path(@setting), html: {method: :put, class: 'settings'} do |f| %>
      <%= f.error_messages %>
      <div class="form-group">
        <%= f.label :terms_and_conditions %><br>
        <%= f.text_area :terms_and_conditions, class: 'form-control', rows: 10 %>
      </div>
      <%= f.submit "Update Settings", class: 'btn btn-success' %>
      or <%= link_to 'Cancel', private_settings_path, class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
