<% content_for :breadcrumb do %>
  <ul id="breadcrumb">
    <li><%= link_to 'Dashboard', private_home_path %></li>
    <li>»</li>
    <li><%= link_to 'Time Sheets', private_time_sheets_path %></li>
    <li>»</li>
    <li><%= link_to 'Time Sheet #' + @time_sheet.id.to_s, private_time_sheet_path(@time_sheet) %></li>
    <li>»</li>
    <li><%= @page_title %></li>
  </ul>
<% end %>

<% content_for :submenu do %>
  <%= render :partial => 'menus/time_entries_menu', :layout => false %>
<% end %>

<% form_for [:private, @job, @time_entry] do |f| %>
  <%= f.error_messages %>

  <p>
    <label>User</label>
    <br>
    <%= @time_entry.user.name %>
  </p>

  <p>
    <label>Clock In Time</label>
    <br>
    <%= datetime_select 'time_entry', :clock_in, { :minute_step => 15, :discard_year => true } %>
  </p>

  <p>
    <label>Clock Out Time</label>
    <br>
    <%= datetime_select 'time_entry', :clock_out, { :minute_step => 15, :discard_year => true } %>
  </p>

  <p>
    <label>Notes</label>
    <br>
    <%= f.text_field :note, :class => "span-7" %>
  </p>

  <hr>
  <%= f.submit "Save and Return to Time Sheet" %> or <%= link_to 'Cancel', edit_private_time_sheet_path(@time_sheet.id) %>
<% end %>