<p><%= link_to "New Load Sheet", new_private_load_sheet_path %></p>

<% form_tag :controller => 'private', :action => "navigate" do -%>

  <p><%= select_tag 'job_id', options_from_collection_for_select(@jobs, 'id', 'label') %></p>

  <ul class="jobs">
    <li><label class="show"><%= radio_button_tag "navigate", "show_job" %> Show Job</label></li>
    <li><label class="edit-inline"><%= radio_button_tag "navigate", "clock_in" %> Clock In</label></li>
    <li><label class="edit-inline"><%= radio_button_tag "navigate", "clock_out" %> Clock Out</label></li>
    <li><label class="new-inline"><%= radio_button_tag "navigate", "new_time_sheet" %> New Time Sheet</label></li>
    <li><label class="new-inline"><%= radio_button_tag "navigate", "new_gun_sheet" %> New Gun Sheet</label></li>
  </ul>

  <p><%= submit_tag "Go to Page" %></p>

<% end %>
