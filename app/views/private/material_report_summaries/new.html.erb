<div class="container">
  <% content_for :breadcrumb do %>
    <ul id="breadcrumb">
      <li><%= link_to 'Dashboard', private_home_path %></li>
      <li>»</li>
      <li><%= link_to 'Material Report Summaries', private_material_report_summaries_path %></li>
      <li>»</li>
      <li><%= @page_title %></li>
    </ul>
  <% end %>

  <% content_for :submenu do %>
    <%= render :partial => 'menus/jobs_menu', :layout => false %>
  <% end %>

  <% form_for [:private, @job, @material_report_summary] do |f| %>
    <%= f.error_messages %>
    <%= render :partial => "form", :object => f %>
    <hr>
    <%= f.submit "Create Material Report Summary" %> or <%= link_to 'Cancel', private_material_report_summaries_path %>
  <% end %>
</div>
