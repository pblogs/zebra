<div class="show_actions">
  <%= link_to "Edit", edit_private_client_path(@client.id), :class => "edit" %>
  <%= link_to "Delete", private_client_path(@client.id), :confirm => 'Are you sure? This cannot be undone!', :method => :delete, :class => "delete" %>
</div>

<div class="container">
  <%= content_for :breadcrumb do %>
    <ul id="breadcrumb">
      <li><%= link_to 'Dashboard', private_home_path %></li>
      <li>»</li>
      <li>Settings</li>
      <li>»</li>
      <li><%= link_to 'Clients', private_clients_path %></li>
      <li>»</li>
      <li><%= @page_title %></li>
    </ul>
  <% end %>

  <div class="span24">
    <table>
      <tr>
        <td>Contact</td>
        <td>
          <h3><%= @client.contact %></h3>
        </td>
      </tr>
      <tr>
        <td>Email:</td>
        <td><%= mail_to @client.email %></td>
      </tr>
      <tr>
        <td>Work Phone:</td>
        <td><%= number_to_phone @client.work_phone, :area_code => true %></td>
      </tr>
      <tr>
        <td>Cell Phone:</td>
        <td><%= number_to_phone @client.cell_phone, :area_code => true %></td>
      </tr>
      <tr>
        <td>Fax:</td>
        <td><%= number_to_phone @client.fax, :area_code => true %></td>
      </tr>
      <tr>
        <td>Address:</td>
        <td><%= @client.full_address %></td>
      </tr>
      <tr>
        <td>Notes</td>
        <td>
          <%= @client.notes %>
        </td>
      </tr>
    </table>
  </div>

  <h2>
    Contacts
    <small><%= link_to 'Add New Contact', new_private_client_client_contact_path(@client) %></small>
  </h2>

  <table class="sortable">
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Phone</th>
      <th>Cell</th>
      <th>Fax</th>
      <th>Email</th>
      <th>Notes</th>
      <th>Date Added</th>
      <th></th>
    </tr>
    <% @client.client_contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.title %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.cell %></td>
        <td><%= contact.fax %></td>
        <td><%= contact.email %></td>
        <td><%= contact.notes %></td>
        <td><%= I18n.l contact.created_at.to_date, :format => :long %></td>
        <td class="actions">
          <%= link_to "Delete", private_client_client_contact_path(@client, contact), :confirm => 'Are you sure? This cannot be undone!', :method => :delete, :class => "delete" %>
          <%= link_to "Edit", edit_private_client_client_contact_path(@client, contact), :class => "edit" %>
        </td>
      </tr>
    <% end %>
  </table>

</div>
