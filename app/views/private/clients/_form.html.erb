<div class="container">
<div class="span-12">

<div class="span-6 append-bottom">
  <%= form.label :name, "Name" %><br>
  <%= form.text_field :name, :class => "span-6" %>
</div>

<br class="clear">

<div class="span-6 append-bottom">
  <%= form.label :contact, "Contact Name" %><br />
  <%= form.text_field :contact, :class => "span-6" %>
</div>

<div class="span-6 last append-bottom">
  <%= form.label :email, "Contact Email Address" %><br />
  <%= form.text_field :email, :class => "span-6" %>
</div>

<br class="clear">

<div class="span-6 append-bottom">
  <%= form.label :work_phone, "Work Phone" %><br />
  <%= form.text_field :work_phone, :class => "span-6" %>
</div>

<div class="span-6 last append-bottom">
  <%= form.label :cell_phone, "Cell Phone" %><br />
  <%= form.text_field :cell_phone, :class => "span-6" %>
</div>

<br class="clear">

<div class="span-6 append-bottom">
  <%= form.label :address %>
  <%= form.text_field :address, :class => "span-6" %>
</div>

<div class="span-3 append-bottom">
  <%= form.label :city %>
  <%= form.text_field :city, :class => "span-3" %>
</div>

<div class="span-1 append-bottom">
  <%= form.label :province, "Prov" %>
  <%= form.text_field :province, :class => "span-1" %>
</div>

<div class="span-2 last append-bottom">
  <%= form.label :postal_code, "Postal" %>
  <%= form.text_field :postal_code, :class => "span-2" %>
</div>

</div>

<div class="span-6 append-bottom">
  <%= form.label :notes, "Notes" %>
  <%= form.text_area :notes, :class => "span-6", :style => "height: 190px" %>
</div>

<br class="clear">
</div>