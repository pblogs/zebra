<% content_for :breadcrumb do %>
  <ul id="breadcrumb">
    <li><%= link_to 'Home', private_home_path %></li>
    <li>»</li>
    <li><%= link_to 'Clients', private_clients_path %></li>
    <li>»</li>
    <li><%= @page_title %></li>
  </ul>
<% end %>

<% form_for @client, :url => private_client_path(@client), :method => :put do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Save Client" %> or <%= link_to 'Cancel', private_clients_path %>
<% end %>
