<div class="span-4 append-bottom prepend-1">
  <%= form.label :happened_at, "At:" %><br>
  <%= form.time_select :happened_at, :minute_step => 15, :prompt => { :hour => "hh", :minute => "mm"} %>
</div>

<div class="span-6 append-bottom">
  <%= form.label :time_task_category_id, "We:" %>
  <%= form.select (:time_task_category_id, @time_task_categories.map {|u| [u.name,u.id]}, :include_blank => true) %>
</div>

<div class="span-13 last append-bottom">
  <%= form.label :note, "Notes:" %>
  <%= form.text_field :note, :class => "span-13" %>
</div>

<br class="clear">