<%= content_for :breadcrumb do %>
  <ul id="breadcrumb">
    <li><%= link_to 'Dashboard', private_home_path %></li>
    <li>»</li>
    <li>Settings</li>
    <li>»</li>
    <li><%= @page_title %></li>
  </ul>
<% end %>

<p id="new"><%= link_to 'New Completion Level', new_private_completion_path %></p>

<table class="sortable">
  <tr>
    <th>Name</th>
    <th></th>
    <th class="actions nosort"></th>
  </tr>

<% @completions.each do |completion| %>
  <tr>
    <td><%= completion.name %></td>
    <td>
      <span class='colorbox' style='background:<%= completion.color %>;padding: 0 5px;'>
        &nbsp;&nbsp;&nbsp;
      </span>
    </td>
    <td class="actions">
    <%= link_to 'Delete', private_completion_path(completion), :confirm => 'Are you sure? This cannot be undone!', :method => :delete, :class => "delete" %>
    <%= link_to "Edit", edit_private_completion_path(completion), :class => "edit" %>
    </td>
  </tr>
<% end %>
</table>
