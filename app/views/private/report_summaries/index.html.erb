<% content_for :breadcrumb do %>
  <ul id="breadcrumb">
    <li><%= link_to 'Dashboard', private_home_path %></li>
    <li>Â»</li>
    <li><%= @page_title %></li>
  </ul>
<% end %>

<% content_for :submenu do %>
<ol class="noprint">
  <li><%= link_to 'All Job Value', all_job_value_path %></li>
  <li><%= link_to 'All Marking Value', all_marking_value_path %></li>
</ol>
<% end %>

<hr>

<p class="hint">Jobs appear in this list if they are active and have at least one gun sheet.</p>

<table>
<% form_for @search do |f| %>
<tr class="no-border">
  <td class="no-border">
    <%= f.label :name_like, "Job" %><br />
    <%= f.text_field :name_like, :size => "20" %>
  </td>
  <td class="no-border right">
    <%= link_to "Clear Search", private_report_summaries_path %><br />
    <%= f.submit "Search" %>
  </td>
</tr>
<% end %>
</table>

<table class="sortable">
  <tr>
    <th class="center number">Job #</th>
    <th>Job Name</th>
    <th class="nosort">&nbsp;</th>
    <th class="nosort">&nbsp;</th>
  </tr>

<% @jobs.each do |job| %>
  <% if job.gun_sheets.size != 0 %>
  <tr>
    <td><%= job.id %></td>
    <td><%= job.name %> <%= link_to image_tag("open-link.png"), private_job_path(job) %></td>
    <td><%= link_to("Reconciliation Summary",  private_job_reconciliation_summary_path(job)) %></td>
    <td><%= link_to("Material Report Summary",  private_job_material_report_summary_path(job)) %></td>
  </tr>
  <% end %>
<% end %>
</table>
