<ol class="noprint">

  <% if permitted_to? :manage, :private_time_entries -%>
    <li><%= active_link_to "Edit", private_time_entry_path(@time_entry) %></li>
  <% end %>

  <% if permitted_to? :time_entries, :private_reports -%>
    <li><%= active_link_to "Recent Time Entries", report_time_entries_path %></li>
  <% end %>

  <% if @time_entry.time_sheet %>
    <% if permitted_to? :read, :private_time_sheets -%>
      <li><%= active_link_to "Show Time Sheet", private_time_sheet_path(@time_sheet) %></li>
    <% end %>

    <% if permitted_to? :manage, :private_time_sheets -%>
      <li><%= active_link_to "Edit Time Sheet", edit_private_time_sheet_path(@time_sheet) %></li>
    <% end %>
  <% end %>

  <% if @time_entry.job %>
    <% if permitted_to? :read, :private_jobs -%>
      <li><%= active_link_to "Show Job", private_job_path(@time_entry.job_id) %></li>
    <% end %>
  <% end %>

</ol>