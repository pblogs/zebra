<ol class="noprint">

  <% if permitted_to? :manage, :private_estimates -%>
    <li><%= active_link_to "Edit", edit_private_estimate_path(@estimate) %></li>
  <% end %>

  <% if @estimate.job %>
    <% if permitted_to? :read, :private_jobs -%>
      <li><%= active_link_to "Show Job", private_job_path(@estimate.job) %></li>
    <% end %>

    <% if permitted_to? :manage, :private_jobs -%>
      <li><%= active_link_to "Edit Job", edit_private_job_path(@estimate.job) %></li>
    <% end %>
  <% end %>

  <% if @estimate.time_sheet %>
    <% if permitted_to? :read, :private_time_sheets -%>
      <li><%= active_link_to "Show Time Sheet", private_time_sheet_path(@time_sheet) %></li>
    <% end %>

    <% if permitted_to? :edit, :private_time_sheets -%>
      <li><%= active_link_to "Edit Time Sheet", edit_private_time_sheet_path(@time_sheet) %></li>
    <% end %>
  <% end %>

</ol>